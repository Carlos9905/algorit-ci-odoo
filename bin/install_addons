#!/bin/bash
set -e

# Script para instalar addons

echo "=== Instalando addons desde ${ADDONS_DIR} ==="

# Verificar que el directorio existe
if [ ! -d "${ADDONS_DIR}" ]; then
    echo "Error: El directorio ${ADDONS_DIR} no existe"
    exit 1
fi

# Remover línea addons_path existente y agregar la nueva
sed -i '/^addons_path/d' ${ODOO_RC}
echo "addons_path=${ADDONS_PATH},${ADDONS_DIR}" >> ${ODOO_RC}

echo "=== Instalación completada ==="
echo "Configuración actual:"
cat ${ODOO_RC}
